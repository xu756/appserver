syntax = "v1"

info(
	title: "admin"
	desc: "admin"
	author: "xu756"
	email: "756334744@qq.com"
	version: "v1"
)

type (
	//  空请求
	EmptyReq {
	}
	UserInfo {
		Id     int64  `json:"id"`
		Name   string `json:"name"`
		Avatar string `json:"avatar"`
		Role   int64  `json:"role"`
		OpenId string `json:"openId"`
	}
)

@server(
	prefix : appserver/admin/api
	middleware : Auth
)
service admin-api {
	@doc "获取用户信息"
	@handler getUserInfo
	get /get-admin-info (EmptyReq) returns (UserInfo)
}